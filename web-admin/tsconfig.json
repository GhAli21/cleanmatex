{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@ui/*": ["./src/ui/*"],
      "@features/*": ["./src/features/*"]
    }
  },
  "include": ["next-env.d.ts", 
              "**/*.ts", 
              "**/*.tsx", 
              "app",
              "src",
              "lib",
              ".next/types/**/*.ts"
            ],
  "exclude": ["node_modules"]
}
